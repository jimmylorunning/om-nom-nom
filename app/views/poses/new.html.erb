<h1>New Pose</h1>
<%= form_for :pose, :html => { class: 'form-horizontal pose-form' }, :url => poses_path do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= f.text_field :name, class: 'form-control', :required => true %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-sm-offset-2 col-sm-10'>
      <%= f.submit "Add New Pose", class: 'btn btn-default' %>
    </div>
  </div>

<% end %>
