<h1>Routines#new</h1>
<%= form_for :routine, :html => { class: 'form-horizontal pose-form' }, url: routines_path do |f| %>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>                   
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>
  </div>
  
  <table class="table table-striped posts-table">
  <% @poses.each do |pose| %>
    <tr><td><%= pose.name %></td><td><%= f.check_box pose.id %></td></tr>
  <% end %>
  </table>

  <div class="form-group">
    <div class='col-sm-offset-2 col-sm-10'>
      <%= f.submit "Add Routine", class: 'btn btn-default' %>
    </div>
  </div>

<% end %>
